  "devDependencies": {
    "@ethersproject/providers": "^5.4.5",
    "@typechain/ethers-v5": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethers": "^5.4.7",
    "jest": "^27.3.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4"
  }
